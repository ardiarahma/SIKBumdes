<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sik_bumdesa.activities.navigation_drawer.BalanceFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/toolbar"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="15dp">

            <ImageButton
                android:id="@+id/balance_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:background="#0000"

                android:src="@drawable/ic_date" />

            <TextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Bulan"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Tahun"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ScrollView
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aset"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Aset Lancar"
                android:textColor="@color/three"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_aset_lancar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Aset Tetap"
                android:textColor="@color/three"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_aset_tetap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Liabilitas/Utang"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Utang Lancar"
                android:textColor="@color/three"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_utang_lancar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Utang Jangka Panjang"
                android:textColor="@color/three"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_utang_jp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ekuitas"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ekuitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pendapatan"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Biaya"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_biaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pendapatan Lainnya"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pendapatan_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Biaya Lainnya"
                android:textColor="@color/three"
                android:textSize="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_biaya_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:text="Total"
                    android:textColor="@color/three"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.7"
                    android:text="000000"
                    android:textAlignment="textEnd"
                    android:textColor="@color/three"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:fab_addButtonColorNormal="@color/four"
        app:fab_addButtonColorPressed="@color/two"
        app:fab_addButtonPlusIconColor="#FFFFFF"
        app:fab_labelStyle="@style/customFab">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/four"
            app:fab_colorPressed="@color/two"
            app:fab_icon="@drawable/ic_add"
            app:fab_size="mini"
            app:fab_title="Tambah Neraca Awal" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
