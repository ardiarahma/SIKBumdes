<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ardiarahma.sik_bumdesa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.ResetPasswordActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.dashboard.BukuBesarActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activities.dashboard.NeracaActivity" />
        <activity android:name=".activities.dashboard.EkuitasActivity" />
        <activity android:name=".activities.dashboard.JurnalDetailsActivity" />
        <activity
            android:name=".activities.dashboard.JurnalActivity"
            android:label="@string/title_activity_jurnal2"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.dashboard.LabaRugiActivity" />
        <activity
            android:name=".activities.navigation_drawer.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.navigation_drawer.NeracaAwalActivity"
            android:label="@string/title_activity_neraca_awal"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.navigation_drawer.AnggaranActivity"
            android:label="@string/title_activity_anggaran"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.navigation_drawer.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>